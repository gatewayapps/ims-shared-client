{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "node"
  ],
  "env": {
    "browser" : true
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "node/no-deprecated-api" : 1,
    "node/no-missing-import" : 2,
    "node/no-missing-require" : 2
  }
}